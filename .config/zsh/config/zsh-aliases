alias ls='ls --color=auto -ACF'
alias ll='ls --color=auto -alF'

alias vidotfiles="cd $HOME/dotfiles && nvim"

# execute script
alias v="horizontal_split"
alias gconfig="cp -i ~/.scripts/git-config . && . ./git-config"
alias gg="$HOME/.scripts/go-dir"
alias vpn="$HOME/.scripts/vpn"

# confirm before overwriting something
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

# open explorer
alias e='xdg-open .'

# kubectl
alias k="kubectl"
alias lz="lazygit"
alias kcontext="kubectl config get-contexts"
