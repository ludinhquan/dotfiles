# Random Photo Every Login
feh --bg-fill --randomize ~/wallpapers/* &

# Monitor Config
# xrandr --auto --output Virtual-1 --mode 1920x1080

# Don't Randomly Turn off
xset s off
xset -dpms
xset s noblank

# Speedy keys
xset r rate 210 40

# remap caps to escape
setxkbmap -option caps:escape

# Hide mouse when typing
xbanish &

# load Xresources
# xrdb ~/.Xresources
source ~/.zshenv

autorandr --load hdmi
